<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/_15sdp"
    android:layout_marginLeft="@dimen/_15sdp"
    android:layout_marginRight="@dimen/_15sdp"
    tools:context=".dashboard.MainDashboardFragment"
    android:orientation="vertical">
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello Ahmed"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_400"
            android:textSize="@dimen/_20sdp"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_icon"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you looking for blood ?"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/poppins_400"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/_20sdp"
        />

    <LinearLayout
        android:weightSum="2"
        android:background="@drawable/signinbg2"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_vector__1_"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="103"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/white"
                android:layout_margin="@dimen/_10sdp"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New blood request"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_400"
                />




        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center"
            android:background="#D0D0D0"
            />

        <LinearLayout
           android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_vector__2_"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp"
                android:layout_margin="@dimen/_10sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="People have donated"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_400"
                />


        </LinearLayout>




    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_group_34120"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/searchDonor_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:text="Search Donor"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/signinbg2"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/createbloodRequestBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:text="Create blood request"
        android:textColor="@color/red"
        android:textAllCaps="false"
        android:background="@drawable/btnbg"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        />




    </LinearLayout>

</androidx.core.widget.NestedScrollView>



</LinearLayout>