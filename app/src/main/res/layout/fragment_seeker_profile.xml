<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_15sdp"
    tools:context=".dashboard.SeekerProfileFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_vector__3_" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Seeker request"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilepic"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/image"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name asdfsd"
            android:layout_toRightOf="@id/profilepic"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/poppins_500"
            android:textColor="@color/black"
            />

        <ImageView
            android:id="@+id/messege"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@id/name"
            android:src="@drawable/ic_group" />

        <ImageView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@id/messege"
            android:src="@drawable/ic_group" />


        <TextView
            android:id="@+id/hospitalname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Labaid Hospital"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/profilepic"
            android:layout_below="@id/name"
            android:layout_marginLeft="@dimen/_10sdp"
            />
        <TextView
            android:id="@+id/dateandtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date and time"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/profilepic"
            android:layout_below="@id/hospitalname"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female,Muslim"
            android:layout_toRightOf="@id/profilepic"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_below="@id/dateandtime"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"


            />





    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginTop="@dimen/_20sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I need blood ;akldj j;lkjk jasdjfkjpewoiru fjdskkf jkdjflsdk fksdjflk "
        />

    <LinearLayout
        android:layout_marginTop="@dimen/_100sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/Red"
            android:textSize="@dimen/_20sdp"
            />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/next_btn"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="50dp"
            android:text="Donate"
            android:textSize="@dimen/_15sdp"
            android:textAllCaps="false"
            android:textColor="@color/white"
          android:layout_marginLeft="@dimen/_50sdp"
            android:background="@drawable/signinbg2"
            />



    </LinearLayout>



</LinearLayout>